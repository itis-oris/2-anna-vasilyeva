<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
            minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ru.itis.client.controller.MainController"
            stylesheets="@../../../styles/styles.css">

   <center>
      <VBox alignment="CENTER" spacing="20.0" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <!-- Заголовок "FlipCard" с классом "text-title" из styles.css -->
            <Text fx:id="titleText" text="Card Flip" styleClass="text-title"/>

            <!-- Кнопка "Start" с классом "button" из styles.css -->
            <Button fx:id="startButton" mnemonicParsing="false" text="Start" styleClass="button"/>
         </children>
      </VBox>
   </center>

</BorderPane>
