<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.effect.DropShadow?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ru.itis.client.controller.ChoiceRoomController"
            stylesheets="@../../../styles/styles.css">

   <center>
      <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="20.0" BorderPane.alignment="CENTER">
         <children>
            <!-- Текст с названием "CardFlip" с классом "text-title" из styles.css -->
            <Text fx:id="titleText" text="CardFlip" styleClass="text-title">
               <effect>
                  <DropShadow color="rgba(0, 0, 0, 0.5)" radius="10" offsetX="3" offsetY="3" />
               </effect>
            </Text>

            <!-- Текстовое поле для ввода комнаты с классом "text-field" из styles.css -->
            <TextField fx:id="inputRoom" maxWidth="300.0" styleClass="text-field"/>

            <!-- Кнопка "Confirm" с классом "button" из styles.css -->
            <Button fx:id="sendRoomButton" mnemonicParsing="false" text="Confirm" styleClass="button">
               <effect>
                  <DropShadow color="rgba(0, 0, 0, 0.3)" radius="8" offsetX="3" offsetY="3" />
               </effect>
            </Button>
         </children>
      </VBox>
   </center>
</BorderPane>
